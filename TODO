TABBARSCROLLER
this.injectMui().then(() => {
       window.tabBarScroller = new mdc.tabs.MDCTabBarScroller(document.querySelector('#xxxtab-bar-scroller'));
       window.tabBarScroller.layout();
       window.tabBarScroller.tabBar.layout();
    })